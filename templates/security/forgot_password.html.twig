{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mot de passe oublié</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
            {{ form_row(form.email) }}
            <button type="submit" class="btn btn-primary">Envoyer</button>
        {{ form_end(form) }}

        <div class="mt-3">
            <a href="{{ path('app_login') }}">Retour à la connexion</a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: 500px;
            margin: 2rem auto;
            padding: 20px;
        }
        h1 {
            margin-bottom: 2rem;
            text-align: center;
        }
        button[type="submit"] {
            width: 100%;
            margin-top: 1rem;
        }
    </style>
{% endblock %} 