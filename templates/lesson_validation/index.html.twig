{% extends 'base.html.twig' %}

{% block title %}Mes validations de leçons{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .alert-info {
            background-color: var(--color-light);
            border-color: var(--color-primary);
            color: var(--color-dark);
        }
        .list-group-item {
            border-color: var(--color-light);
        }
        .text-muted {
            color: var(--color-neutral) !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Mes validations de leçons</h1>

        {% if validations is empty %}
            <div class="alert alert-info">
                Vous n'avez pas encore validé de leçons.
            </div>
        {% else %}
            <div class="list-group">
                {% for validation in validations %}
                    <div class="list-group-item">
                        <h5 class="mb-1">{{ validation.lesson.title }}</h5>
                        <p class="mb-1">Validée le : {{ validation.validatedAt|date('d/m/Y H:i') }}</p>
                        <a href="{{ path('app_lesson_show', {'id': validation.lesson.id}) }}" 
                           class="btn btn-sm btn-primary">
                            Voir la leçon
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}