{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border-color: var(--color-light);
        }
        .card-body {
            background-color: var(--color-light);
        }
        .text-muted {
            color: var(--color-neutral) !important;
        }
        .alert-info {
            background-color: var(--color-light);
            border-color: var(--color-primary);
            color: var(--color-dark);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ cursus.title }}</h1>
        
        {# Aperçu du cursus #}
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Description</h5>
                <p class="card-text"><strong>Prix : </strong>{{ cursus.price }}€</p>
            </div>
        </div>

        {% if needsPurchase %}
            <div class="alert alert-info">
                Vous devez acheter ce cursus pour y accéder.
                <div class="mt-3">
                    <a href="{{ path('app_purchase_cursus', {'id': cursus.id}) }}" 
                       class="btn btn-primary">
                        Acheter ce cursus pour {{ cursus.price }}€
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}