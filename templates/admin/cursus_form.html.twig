{% extends 'base.html.twig' %}

{% block title %}{{ cursus.id ? 'Modifier' : 'Créer' }} un cursus{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>{{ cursus.id ? 'Modifier' : 'Créer' }} un cursus</h1>

    {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
        <div class="mb-3">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
        </div>
        {% if form.description is defined %}
        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_errors(form.description) }}
        </div>
        {% endif %}
        <div class="mb-3">
            {{ form_label(form.theme) }}
            {{ form_widget(form.theme) }}
            {{ form_errors(form.theme) }}
        </div>
        <button type="submit" class="btn btn-primary">{{ cursus.id ? 'Modifier' : 'Créer' }}</button>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">Retour</a>
    {{ form_end(form) }}
</div>
{% endblock %}